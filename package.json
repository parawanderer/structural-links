{
    "name": "structural-links",
    "displayName": "Structural Links",
    "publisher": "parawanderer",
    "description": "Create clickable links in YAML/JSON based on structure, and text files based on Regex.",
    "version": "0.0.2",
    "icon": "assets/icon.png",
    "engines": {
        "vscode": "^1.109.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "keywords": [
        "yaml",
        "json",
        "link",
        "regex",
        "jsonpath"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/parawanderer/structural-links"
    },
    "bugs": {
        "url": "https://github.com/parawanderer/structural-links/issues"
    },
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "title": "Structural Links",
            "properties": {
                "structuralLinks.rules": {
                    "type": "array",
                    "description": "Rules for linking specific paths in YAML/JSON to URLs",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "oneOf": [
                            {
                                "title": "JSON/YAML Structure Rule",
                                "required": [
                                    "jsonPath",
                                    "linkPattern"
                                ],
                                "not": {
                                    "required": [
                                        "textPattern"
                                    ]
                                }
                            },
                            {
                                "title": "Generic Text Rule",
                                "required": [
                                    "textPattern",
                                    "linkPattern"
                                ],
                                "not": {
                                    "required": [
                                        "jsonPath"
                                    ]
                                }
                            }
                        ],
                        "properties": {
                            "filePattern": {
                                "type": "string",
                                "markdownDescription": "Glob pattern (e.g., `**/models/*.yaml`). Default: `**/*`",
                                "default": "**/*"
                            },
                            "jsonPath": {
                                "type": "string",
                                "markdownDescription": "JSONPath (e.g., `$.store.book[*].title`).",
                                "pattern": "^[\\w\\.\\*\\[\\]'\"\\-\\$\\s]+$"
                            },
                            "jsonPathValuePattern": {
                                "type": "string",
                                "description": "Regex to match the value at the JSONPath. Only applies to jsonPath rules.",
                                "format": "regex"
                            },
                            "textPattern": {
                                "type": "string",
                                "description": "Global Regex to find in the file (ignores structure).",
                                "format": "regex"
                            },
                            "linkPattern": {
                                "type": "object",
                                "additionalProperties": false,
                                "required": [
                                    "target"
                                ],
                                "properties": {
                                    "capture": {
                                        "type": "string",
                                        "markdownDescription": "Regex to extract values. Default: `^(.*)$`\n\nYou may also use named groups: `(?<name>...)` and reference them as `$name`. \n\nIf omitted, the whole JSONPath match or text match is used. Default is the whole match.",
                                        "default": "^(.*)$",
                                        "format": "regex"
                                    },
                                    "transforms": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "oneOf": [
                                                {
                                                    "required": ["search", "replace"],
                                                    "properties": {
                                                        "search": {
                                                            "type": "string",
                                                            "description": "Regex or string to find."
                                                        },
                                                        "replace": {
                                                            "type": "string",
                                                            "description": "String to replace with."
                                                        },
                                                        "applyTo": {
                                                            "type": "string",
                                                            "markdownDescription": "Apply to a specific capture group (e.g., `$1` or `$name` if you used named groups `(?<name>...)`) or `all`.\n\nIf omitted, applies to the whole URL\n\nDefault is `all`.",
                                                            "default": "all",
                                                            "examples": [
                                                                "$1",
                                                                "$2",
                                                                "$3"
                                                            ],
                                                            "pattern": "^(all)|(\\$[a-zA-Z0-9]+)$"
                                                        }
                                                    }
                                                },
                                                {
                                                    "required": ["command"],
                                                    "properties": {
                                                        "command": {
                                                            "type": "string",
                                                            "default": "urlEncode",
                                                            "enum": ["urlEncode", "urlDecode", "toUpperCase", "toLowerCase", "trim"],
                                                            "description": "Transformation command. `urlEncode` and `urlDecode` are especially useful for making sure captured values are safe to include in URLs."
                                                        },
                                                        "applyTo": {
                                                            "type": "string",
                                                            "markdownDescription": "Apply to a specific capture group (e.g., `$1` or `$name` if you used named groups `(?<name>...)`) or `all`.\n\nIf omitted, applies to the whole URL\n\nDefault is `all`.",
                                                            "default": "all",
                                                            "examples": [
                                                                "$1",
                                                                "$2",
                                                                "$3"
                                                            ],
                                                            "pattern": "^(all)|(\\$[a-zA-Z0-9]+)$"
                                                        }
                                                    }
                                                }
                                            ]
                                        }
                                    },
                                    "target": {
                                        "type": "string",
                                        "markdownDescription": "Target URL. You can use `$1`... or `$name` for groups.\n\nYou can also use **some** [VSCode variables](https://code.visualstudio.com/docs/reference/variables-reference) like `${workspaceFolder}`. See the extension's [README](https://github.com/parawanderer/structural-links) for more. \n\ne.g.:\n\n- `https://example.com/$1`\n- `https://example.com/$name` (when using named groups like `(?<name>...)`)",
                                        "examples": [
                                            "https://example.com/$1"
                                        ]
                                    },
                                    "text": {
                                        "type": "string",
                                        "markdownDescription": "Hover tooltip text.\n\nMay include capture group results: `$1`... or named groups (`(?<name>...)` -> `$name`).\n\n Defaults to 'Open Link'.",
                                        "default": "Open Link",
                                        "examples": [
                                            "Open Link for '$1'"
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "npm run check-types && npm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "npm run check-types && npm run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "vscode-test",
        "test:unit": "mocha"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/vscode": "^1.109.0",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "esbuild": "^0.27.2",
        "eslint": "^9.39.2",
        "mocha": "^11.7.5",
        "npm-run-all": "^4.1.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.54.0"
    },
    "dependencies": {
        "@types/minimatch": "^5.1.2",
        "minimatch": "^10.1.2",
        "yaml": "^2.8.2"
    }
}
